

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".View.MainActivity.ContentFragment" android:weightSum="1"
              android:baselineAligned="false" android:orientation="vertical">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
              android:baselineAligned="false">
    <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"/>
</LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:orientation="horizontal">

        <ImageView
                style="@style/ImageButtons"
                android:src="@drawable/ic_messages"
                android:id="@+id/home_frag" android:layout_weight="0.25" android:contentDescription="@string/home_page"/>
        <ImageView
                style="@style/ImageButtons"
                android:src="@drawable/ic_friends"
                android:id="@+id/friends_frag" android:layout_weight="0.25" android:contentDescription="@string/friends"/>
        <ImageView
                style="@style/ImageButtons"
                android:src="@drawable/ic_notifications"
                android:id="@+id/notification_frag" android:layout_weight="0.25" android:contentDescription="@string/notifications"/>
        <ImageView
                style="@style/ImageButtons"
                android:src="@drawable/ic_messages"
                android:id="@+id/profilePage" android:layout_weight="0.25" android:contentDescription="@string/profile"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/sub_container"/>
</LinearLayout>
