<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:showIn="@layout/activity_main"
                tools:context=".View.RegisterFragment">


    <EditText
           style="@style/TextFields"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_editText"
            android:layout_marginTop="48dp"
           android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/email"/>
    <EditText
            style="@style/TextFields"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_editText" android:layout_below="@+id/email_editText" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="42dp"
            android:hint="@string/password"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/login_button" android:layout_below="@+id/password_editText" android:layout_centerHorizontal="true"/>
</RelativeLayout>
